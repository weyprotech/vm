                        img.size(src="images/size_1x1.png")
                    .di_name Dennis Martinez
                .td(data-label="Upcoming Event")
                  .event_info
                    .date.font_khaki 2019.12.25
                    .text 2020 New Collection Runway
          .pager_bar
            .pages
              | Page 1 of 15
            ul.pager_navigation
              li.prev
                a(href="javascript:;") &lt; Previous
              li.current
                a(href="javascript:;") 1
              li
                a(href="javascript:;") 2
              li
                a(href="javascript:;") 3
              li
